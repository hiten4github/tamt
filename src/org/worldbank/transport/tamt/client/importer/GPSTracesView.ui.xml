<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.worldbank.transport.tamt.client.importer.GPSTracesView.GPSTraceStyle">
		.important {
			font-weight: bold;
		}
		.nav {
			margin-right: 6px;
		}
		.menu {
			height: 20px;
			background-color: white;
		}
		.unused {
			height: 100%;
			vertical-align: top;
			background-color: white;	
			width: 400px;
			border-top: 1px solid black;
			padding-top: 4px;
		}
		.clickable {
			cursor: pointer;
			text-decoration: underline;
			color: blue;	
		}
		.save {
			margin-left: 100px;
		}
		.cancel {
			margin-left: 10px;
		}
		.delete {
			font-size: 12px;;	
		}
		.tagRecords {
			font-size: 12px;
			font-weight: bold;	
		}		
		.label {
			width: 100px;	
		}
		.detailRow {
			vertical-align: middle;
			padding: 4px;
			height: 20px;
		}
		.list {
			/*background-color: red;*/
		}
		.list td {
			text-align: left;	
		}
		.checkbox {
			width: 10px;
		}
		.wide {
			border: 0px solid green;	
		}
		.bold {
			font-weight: bold;
		}
		.top {
			vertical-align: top;
		}
		.columnHeader {
			font-weight: bold;	
		}
		.invisible {
			visibility: hidden;
		}
	</ui:style>
		<g:VerticalPanel ui:field="panel" width="100%">
			<g:FormPanel ui:field="uploadForm" method="post">
			<g:VerticalPanel width="100%" height="100px" styleName="{style.wide}">
				<g:HorizontalPanel styleName="{style.detailRow}">
					<g:HTML styleName="{style.bold}">Import a ZIP archive containing GPS log files in NMEA format:</g:HTML>
				</g:HorizontalPanel>
				<g:HorizontalPanel styleName="{style.detailRow}">
					<g:HTML styleName="{style.label}">Name:</g:HTML>
					<g:TextBox ui:field="name" name="myName"/>
					<g:Hidden ui:field="studyRegionId" name="studyRegionId"/>
				</g:HorizontalPanel>
				<!-- 
				<g:HorizontalPanel styleName="{style.detailRow}">
					<g:HTML styleName="{style.label}">Description:</g:HTML>
					<g:TextBox ui:field="description" name="myDesc"/>
				</g:HorizontalPanel>
				 -->
				<g:HorizontalPanel styleName="{style.detailRow}">
					<g:HTML styleName="{style.label}">ZIP file:</g:HTML>
					<g:FileUpload ui:field="fileUpload" name="uploadFormElement"/>	
				</g:HorizontalPanel>
				<g:HorizontalPanel styleName="{style.detailRow}">
					<g:Button ui:field="submit" text="Upload" styleName="{style.save}"/>
				</g:HorizontalPanel>						
			</g:VerticalPanel>
			</g:FormPanel>
			<g:HTML><hr/></g:HTML>
			<g:HorizontalPanel styleName="{style.menu}">
				 <g:Label ui:field="select" text="Select: " styleName="{style.nav}"/>
				 <g:Label ui:field="all" text="All" styleName="{style.nav} {style.clickable}"/>
				 <g:Label ui:field="none" text="None" styleName="{style.nav} {style.clickable}"/>
				 <g:Label ui:field="refresh" text="Refresh" styleName="{style.nav} {style.clickable}"/>
			 	 <g:Button ui:field="delete" text="Delete checked" styleName="{style.delete}"/>
			 	 <g:Button ui:field="assignToRoads" text="Assign GPS records" styleName="{style.tagRecords}"/>
				 <g:Button ui:field="process" text="Process checked" styleName="{style.invisible}"/>
			</g:HorizontalPanel>
			<g:HTML><hr/></g:HTML>
			<g:ScrollPanel ui:field="scrollPanel" height="250px" width="100%" styleName="{style.top}">
				<g:FlexTable ui:field="gpsTraceList" cellSpacing="0" cellPadding="0" width="100%" styleName="{style.list}"/>
			</g:ScrollPanel>		
		</g:VerticalPanel>
</ui:UiBinder> 