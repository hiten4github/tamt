<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.worldbank.transport.tamt.client.tag.TagListing.TagStyle">
		.important {
			font-weight: bold;
		}
		.nav {
			margin-right: 6px;
		}
		.menu {
			height: 20px;
			background-color: white;
		}
		.unused {
			height: 100%;
			vertical-align: top;
			background-color: white;	
			width: 400px;
			border-top: 1px solid black;
			padding-top: 4px;
		}
		.clickable {
			cursor: pointer;
			text-decoration: underline;
			color: blue;	
		}
		.save {
			margin-left: 100px;
		}
		.cancel {
			margin-left: 10px;
		}
		.delete {
			font-size: 10px;;	
		}
		.label {
			width: 100px;	
		}
		.detailRow {
			vertical-align: middle;
			padding: 4px;
		}
		.tagList td {
			text-align: left;	
		}
		.checkbox {
			width: 10px;
		}	 
	</ui:style>
	<g:VerticalPanel>
		<g:HorizontalPanel styleName="{style.detailRow}">
			<g:HTML styleName="{style.label}">Name:</g:HTML>
			<g:TextBox ui:field="name"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel styleName="{style.detailRow}">
			<g:HTML styleName="{style.label}">Description:</g:HTML>
			<g:TextBox ui:field="description"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Button ui:field="save" text="Save" styleName="{style.save}"/>
			<g:Button ui:field="cancel" text="Cancel" styleName="{style.cancel}"/>
		</g:HorizontalPanel>
		<g:HTML><hr/></g:HTML>
		<g:HorizontalPanel styleName="{style.menu}">
			 <g:Label ui:field="select" text="Select: " styleName="{style.nav}"/>
			 <g:Label ui:field="all" text="All" styleName="{style.nav} {style.clickable}"/>
			 <g:Label ui:field="none" text="None" styleName="{style.nav} {style.clickable}"/>
			 <g:Button ui:field="delete" text="Delete checked" styleName="{style.delete}"/>
		</g:HorizontalPanel>
		<g:HTML><hr/></g:HTML>
		<g:ScrollPanel height="318px">
			<g:FlexTable ui:field="tagList" cellSpacing="0" cellPadding="0" width="100%" styleName="{style.tagList}"/>
		</g:ScrollPanel>
	</g:VerticalPanel>
</ui:UiBinder> 