<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:regionm="urn:import:org.worldbank.transport.tamt.client.region">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.outerBorder {
			border: 6px solid green;
			padding: 10px;
			background-color: white;
		}		
		.map {
			border: 1px solid black;	
		}
		.info {
			border: 1px solid black;
			margin-left: 10px;
			height: 480px;
		}
		.tabs {
			margin-right: 10px;
		}
		.shadow {
			
		}
		.buffer {
			height: 500px;
			width: 900px;
		}		
	</ui:style>
	<g:HorizontalPanel ui:field="hpanel" styleName="{style.outerBorder}">
		<regionm:RegionInformation ui:field="regionInformation" styleName="{style.tabs}"/>
		<regionm:RegionMap ui:field="regionMap" styleName="{style.map}"/>
	</g:HorizontalPanel>	 
</ui:UiBinder> 